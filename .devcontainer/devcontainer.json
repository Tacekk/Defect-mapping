{
  "name": "Glass Inspector",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [5173, 3001, 5432, 6379],
  "portsAttributes": {
    "5173": {
      "label": "Frontend",
      "onAutoForward": "notify",
      "visibility": "public"
    },
    "3001": {
      "label": "API",
      "onAutoForward": "silent",
      "visibility": "public"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent",
      "visibility": "public"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "silent",
      "visibility": "public"
    }
  },
  "postCreateCommand": "npm install -g pnpm && pnpm install && pnpm db:generate",
  "postStartCommand": "docker compose -f docker-compose.dev.yml up -d && sleep 5 && pnpm db:push && pnpm dev",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "Prisma.prisma"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  }
}
